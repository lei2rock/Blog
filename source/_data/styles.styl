/**********************************************************/
/************************ 评论框 ***************************/
/**********************************************************/

/* 评论卡片圆角 */
.comments {
  border-radius: $myradius !important;
}

/* 评论超链接 */
.comments a {
  color: var(--link-color) !important;
  transition: all .2s;
  border-bottom-color: var(--link-hover-color);
  display: inline !important;

  &:hover {
    color: var(--link-hover-color) !important;
    border-bottom-width: 2px;
  }
}

.comments a[href^="#"] {
  border-bottom: none !important;
}

.v[data-class=v] .vaction:hover, //评论框左下角
.v[data-class=v] .vcard .vhead .vreply:hover, //回复按钮
.v[data-class=v] .vcard .vhead .vreply.active {
  color: var(--link-hover-color) !important;
}

/* 评论列表昵称链接 */
.v[data-class=v] .vcard .vhead .vnick {
  color: var(--text-color) !important;
  border-bottom: none !important;

  &:hover {
    color: var(--link-hover-color) !important;
  }
}

/* 评论输入框背景 */
.veditor {
	background-image: url($comment-bg-url) !important;
	background-repeat: no-repeat !important;
	background-position: right !important;
}
.veditor:focus {
	background-position-y: 200px !important;
	transition: all .2s ease-in-out 0s !important;
}

/* 评论输入框黑暗模式 */
@media (prefers-color-scheme: dark) {
  body {
    --waline-text-color: $text-color-dark !important;
    --waline-bgcolor: $content-bg-color-dark !important;
    --waline-bgcolor-light: $body-bg-color-dark !important;
  }
}

/* 评论输入框字号字重 */
.v[data-class=v] .vheader label,
.v[data-class=v] .vheader input, 
.v[data-class=v] .veditor,
.v[data-class=v] .vcard .vhead .vnick,
.v[data-class=v] .vcard .vcontent {
  font-size: .9em !important;
}

/* 评论管理登录按钮 */
.v[data-class=v] .vbtn {
  font-size: .8em !important;

  &:hover {
    border-color: $btn-default-hover-bg !important;
    color: $btn-default-hover-bg !important;
  }
  
  @media (prefers-color-scheme: dark) {
    border-color: #3e4b5e !important;
  }
}

/* 评论提交按钮 */
.v[data-class=v] .vbtn.primary {
  font-weight: bold !important;
  color: white !important;
  border-color: $btn-default-bg !important;
  background: $btn-default-bg !important;

  &:hover {
    border-color: $btn-default-hover-bg !important;
    background: $btn-default-hover-bg !important;
  }
}

/* 评论去掉表情包 */
.v[data-class=v] .vaction[title="表情"] {
  display: none;
}


/**********************************************************/
/*********************** 链接卡片  *************************/
/**********************************************************/

/* 普通卡片 */
.post-body .link-grid .link-grid-container {
  border: 2px solid #ddd;
  border-radius: $myradius;
  box-shadow: .2rem .2rem .5rem rgba(0, 0, 0, .2);

  &:hover {
    animation: none;
  }

  &:active {
    box-shadow: none;
    transform: none;
  }
}

.post-body .link-grid .link-grid-container p {

  &:first-of-type {
    font-weight: bold;
    font-size: 1.1em;
    color: #2bbc8a;
  }

  &:last-of-type {
    font-size: .85em;
  }
}

/* 友链卡片 */
.favlink-grid {
  gap: 1rem;
  grid-gap: 1rem;
  display: grid;
  grid-template-columns: 1fr 1fr;
  padding: 1rem;

  +mobile() {
    grid-template-columns: 1fr;
  }
}

.favlink-grid-container {
  box-shadow: none;
  padding: 0;
  position: relative;
  border-bottom: 1px dashed #d3d3d4; 
  min-height: 5rem;
  min-width: 0;
  transition: background .3s;

  &:hover {
    background: none;
    color: var(--link-hover-color);
  }

  &:hover p:first-of-type {
    color: var(--link-hover-color);
  }
}

.favlink-grid-image {
  border: 1px solid #ddd;
  border-radius: 8px;
  height: 4rem;
  width: 4rem;
  box-sizing: border-box;
  position: absolute;
}

.favlink-grid-container p {
  margin: 0 1rem 0 5rem;

  &:first-of-type {
    font-weight: 700;
    margin-top: 3px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &:last-of-type {
    font-size: .875em;
    opacity: .8;
    line-height: 1.3rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
}

.favlink-grid-container a {
  border: 0;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%
  width: 100%;
}

.favlink-grid-container .label {
  font-size: 0.8em;
  line-height: 18px;
  border-radius: 3px;
  background: #e7c000;
  vertical-align: top;
  color: white  !important;
  padding: 0 6px !important;
}


/**********************************************************/
/*********************** 相册标签 **************************/
/**********************************************************/

.albumbox {
  display: inline-flex;
  gap: 3px;
  margin-bottom: 3px;
}

.albumbox-photo {
  margin: 4px;
  flex: 1;
}

.albumbox-photo img {
  width: 100%;
  height:100%;
  margin: 0;
  object-fit: cover;

  &:hover{
    opacity: 0.6;
  }
}

.albumbox-photo .image-caption {
  margin-top: 1em;
}

.album {
  width: 100%;
  max-width: 1040px;
  margin: 0 auto;
  text-align: center
}

.album .card {
  overflow: hidden;
  transition: .3s ease-in-out;
  border-radius: 0;
  background-color: #efefef;
  padding: 1.5px;

  @media(prefers-color-scheme:dark) {
    background-color: $body-bg-color-dark;
  }
}

.album-photo img {
  padding: 0;
  border-radius: 0;
}


/**********************************************************/
/*********************** 特殊排版  *************************/
/**********************************************************/

/* 着重号 `{% dot 强调的文字 %}` */
.emphasis-point {
  font-style: normal;
  text-emphasis: '•';
  -webkit-text-emphasis: '•';
  -moz-text-emphasis: '•';
  text-emphasis-position: under;
  -webkit-text-emphasis-position: under;
  -moz-text-emphasis-position: under;
}

/* 分割线 `<hr>` 或 `***` 或 `---` */
hr {
  background-image: none;
  height: 2em;
  border: none;
  margin: 1em 0 1em;
  text-align: center;

  &::after {
    content: "···";
    letter-spacing: 2em;
    padding-left: 2em;
    font-weight: bold;
  }
}

/* 次级目录索引不显示 */
.breadcrumb {
  display: none;
}

/* 图片大小 */
img[src*='300x'] { width:300px; }
img[src*='350x'] { width:350px; }

img[src*='400x'] { width:400px; }
img[src*='450x'] { width:450px; }

