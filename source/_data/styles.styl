/**********************************************************/
/************************ 按钮 ****************************/
/**********************************************************/

/* 返回最上按钮 */
.back-to-top {
  background: $btn-default-bg;
  opacity: .8;
  font-weight: bold;
  font-size: 1em;
  border-radius: 1em;

  &:hover {
    color: #fff;  
  }
}

/* 赞赏 */
.donations {
  text-align: center;
  margin-top: 3em;
}

.donation-label {
  margin-bottom: 1em;
  letter-spacing: 1px;
  font-size: .9em;
  font-weight: bold;
}

.afdian-button {
  box-shadow: $box-shadow;
  height: 2.5em;
  line-height: 1.5;
  box-sizing: border-box;
  border-color: transparent;
  padding: .6em .9em;
  border-radius: 4px;
  font-size: .9em;
  color: white;
  background-color: #946ce6;
  font-weight: bold;

  &:hover {
    color: white;
    border-color: transparent;
  }
}


/************************************************************/
/************************ 页码页脚 ***************************/
/************************************************************/

/* 删去页码栏外框 */
.pagination {
  border: none !important;
  background: none !important;
  box-shadow: none !important;
}

/* 页码按钮 */
.pagination .prev,
.pagination .next,
.pagination .page-number {
  border: none;
  border-radius: $myradius;

  &:hover {
    color: white;
    background: $btn-default-hover-bg;
    btn-shadow-hover-only();
  }
}

/* 当前页码 */
.pagination .page-number.current {
  background: $btn-default-bg;
  btn-shadow-only();

  @media (prefers-color-scheme: dark) {
    color: #fff;
  }
}

/* 页脚 */
.footer {
  margin-top: 50px;
  padding-bottom: 40px;
  color: var(--blockquote-color);
}

.footer a {
  color: var(--text-color);
  border-bottom:none;
}


