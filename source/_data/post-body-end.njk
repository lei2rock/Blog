{#####################}
{### POST END ITEM ###}
{#####################}
<span style="margin-top:30px; color:var(--blockquote-color); font-size:0.85em">
    {%- if post.update %}
        <span class="post-end-item" title="更新时间">
            {%- set create_title = __('post.update') + __('symbol.colon') + full_date(post.date) %}
            <span class="post-end-item-icon" style="margin-right: 3px"><i class="far fa-fw fa-calendar-check"></i></span>
            <time title="{{ '更新时间' + __('symbol.colon') + full_date(post.update) }}" itemprop="dateModified" datetime="{{ moment(post.update).format() }}">
                <span class="post-end-item-text">更新时间：{{ date(post.update) }}</span>
            </time>
        </span>
    {%- endif %}
    {%- if post.publication %}
        <br>
        <span class="post-end-item" title="文章来源">
            <span class="post-end-item-icon" style="margin-right: 3px">
                <i class="fas fa-fw fa-feather"></i>
            </span>
            {%- if post.publication_url %}
                <span class="post-end-item-text">发表于 <a target="_blank" rel="noopener" href="{{ post.publication_url }}" data-pjax-state="" style="color:var(--blockquote-color)">{{ post.publication }}</a> </span>
            {% else %}
                <span class="post-end-item-text">发表于 {{ post.publication }} </span>
            {%- endif %}
        </span>
    {%- endif %}
    {%- if post.copyright !== false %}
        <br>
        <span class="post-end-item" title="著作权许可协议">
            <span class="post-end-item-icon" style="margin-right: 3px">
                <i class="fab fa-fw fa-creative-commons"></i>
            </span>
            <span class="post-end-item-text">采用 <a style="border-bottom:none;color:var(--blockquote-color);" target="_blank" rel="nofollow noopener" href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.zh">CC BY-NC-SA 4.0</a> 许可协议</span>
        </span>
    {%- endif %}
</span>


