{### 黑白滤镜 ###}
{% if config.gray_filter %}
  <style>
    html {
      -webkit-filter: grayscale(100%);
      -moz-filter: grayscale(100%);
      -ms-filter: grayscale(100%);
      -o-filter: grayscale(100%);
      filter: grayscale(100%);
      filter: gray;
    }
    body {
      background-image: none;
      background: #d2d2d2;
    }
  </style>
{% endif %}

{### Umami Analytics ###}
{% if config.umami.enable %}
  <script async defer data-website-id="{{ config.umami.website_id  }}" src="{{ config.umami.script_url  }}"></script>
{% endif %}

